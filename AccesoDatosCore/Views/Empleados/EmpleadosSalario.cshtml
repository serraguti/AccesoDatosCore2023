@model List<Empleado>

@{
    List<int> listaSalarios = ViewData["SALARIOS"] as List<int>;
}

<h1 style="color:blue">Buscador empleados</h1>

<form method="post">
    <label>Introduzca salario</label>
    <select name="salario">

    </select>
    <button class="btn btn-info">
        Buscar empleados
    </button>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Empleado emp in Model)
        {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
            </tr>
        }
    </tbody>
</table>
